<div id="linkcontainer" class="container" style="margin-top: 5em;">
  <div class="row">
    <div class="col-md-6 text-center">
      <h1>Links</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <table>
        <thead>
          <ul class="buttons">
              <li>
                  <div class="primary-button">
                      
                  </div>
              </li>
            </ul>
          <tr>
            <th>Title</th>
            <th>Url</th>
            <th colspan="3"></th>
          </tr>
        </thead>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6">
          <tbody>
            <% @links.each do |link| %>
              <tr>
                <td><%= link.title %></td>
                <td><%= link.url %></td>
                <td><%= link_to 'Show', link %></td>
                <% if link.user == current_user %>
                <td><%= link_to 'Edit', edit_link_path(link) %></td>
                <td><%= link_to 'Destroy', link, method: :delete, data: { confirm: 'Are you sure?' } %></td>
               <% end %>
                </tr>
            <% end %>
          </tbody>
        </div>
      </div>
    </div>

      </table>
